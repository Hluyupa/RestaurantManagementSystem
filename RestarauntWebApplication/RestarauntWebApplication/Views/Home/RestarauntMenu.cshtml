@model IEnumerable<RestarauntWebApplication.Models.EFModels.Dish>

<head>
    <link rel="stylesheet" href="~/styles/menuStyle.css" />
</head>


<div class="menuContent">
   
    @{
        var dishType = Model.GroupBy(p => p.DishType).Select(p => p.Key);
        foreach (var type in dishType)
        {
            <p>
                @type.DishTypeName
            </p>
            <table class="dishesList">
                @foreach (var item in Model.Where(p => p.DishType.DishTypeName.Equals(type.DishTypeName)))
                {
                    <tr>
                        <td>
                            @item.DishName
                        </td>
                       
                        <td>
                            @string.Format("{0:00} руб.", item.DishCost)
                        </td>
                    </tr>
                }
            </table>
            }
           
        }

    
        
    
</div>