                <img class="image" src="~/images/logo.png" />
            </div>


            <nav role="navigation" class="menu">
                <ul class="menu_list">
                    <li class="menu_item_list">
                        <a href="#" class="menu_item_list_href">
                            <span class="hrefText">Главная</span>
                        </a>
                        <div class="contentBlockMenu">

                        </div>
                    </li>
                    <li class="menu_item_list">
                        <a href="#" class="menu_item_list_href">
